.sideBar {
  width: 100%;
  height: 100%;
}
.sideBar .sideBarContent {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background: #2a3542;
  text-align: center;
}
.sideBar .sideBarContent .personImg {
  margin-bottom: 10px;
  border: 1px solid #000;
}
.sideBar .sideBarContent .personImg img {
  width: 123px;
  height: 123px;
  border-radius: 50%;
  background: #ddd;
  margin-top: 30px;
}
.sideBar .sideBarContent .personImg p {
  font-size: 30px;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #ffffff;
  margin-bottom: 24px;
}
.sideBar .sideBarContent ul li {
  list-style: none;
  width: 100%;
  height: 55px;
  line-height: 55px;
  position: relative;
}
.sideBar .sideBarContent ul li .single {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 55px;
  font-size: 16px;
  color: #fff;
}
.sideBar .sideBarContent ul li .single img {
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-right: 10px;
  display: inline-block;
  margin-top: -2px;
}
